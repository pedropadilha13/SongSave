<div class="container m-auto pt-20h">
    <form class="signup-form" method="POST" autocomplete="off">
      <h4 class="mb-3 font-weight-normal text-center">Crie sua conta</h1>
        <div class="form-group">
          <label for="inputName" class="sr-only">Nome</label>
          <input type="text" name="firstName" id="inputName" class="w-100 form-control<%= locals.errors && locals.errors.firstName ? ' is-invalid' : '' %>" placeholder="Nome" aria-describedby="firstNameFeedback" value="<%= locals.values && locals.values.firstName %>" <%= !locals.errors && 'autofocus' %>  />
          <div id="firstNameFeedback" class="invalid-feedback"><%= locals.errors && locals.errors.firstName || "" %></div>
        </div>
        <div class="form-group">
          <label for="inputLastName" class="sr-only">Sobrenome</label>
          <input type="text" name="lastName" id="inputLastName" class="w-100 form-control<%= locals.errors && locals.errors.lastName ? ' is-invalid' : '' %>" placeholder="Sobrenome" aria-describedby="lastNameFeedback" value="<%= locals.values && locals.values.lastName %>" />
          <div id="lastNameFeedback" class="invalid-feedback"><%= locals.errors && locals.errors.lastName || "" %></div>
        </div>
        <div class="form-group">
          <label for="inputEmail" class="sr-only">Email</label>
          <input type="text" name="email" id="inputEmail" class="w-100 form-control<%= locals.errors && locals.errors.email ? ' is-invalid' : '' %>" placeholder="Email" aria-describedby="emailFeedback" value="<%= locals.values && locals.values.email %>" />
          <div id="emailFeedback" class="invalid-feedback"><%= locals.errors && locals.errors.email || "" %></div>
        </div>
        <div class="form-group">
          <label for="inputPassword" class="sr-only">Senha</label>
          <input type="password" name="password" id="inputPassword" class="w-100 form-control<%= locals.errors && locals.errors.password ? ' is-invalid' : '' %>" placeholder="Senha" aria-describedby="passwordFeedback" />
          <div id="passwordFeedback" class="invalid-feedback"><%= locals.errors && locals.errors.password || "" %></div>
        </div>
        <div class="form-group">
          <label for="inputPassword2" class="sr-only">Confirme sua senha</label>
          <input type="password" name="password2" id="inputPassword2" class="w-100 form-control<%= locals.errors && locals.errors.password ? ' is-invalid' : '' %>" placeholder="Confirme sua senha" />
        </div>
        <div>
          <button class="btn btn-block btn-primary">Cadastrar</button>
        </div>
        <div class="mt-2">
          JÃ¡ tem uma conta? <a href="/auth">Entrar</a>
        </div>
    </form>
</div>