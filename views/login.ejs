<div class="container w-50 m-auto pt-5">
  <div>
    <form class="login-form" autocomplete="off" method="post">
      <h4 class="mb-3 font-weight-normal text-center">SongSave login</h1>
      <div class="form-group">
        <label for="inputEmail" class="sr-only">Email</label>
        <input
          type="text"
          name="email"
          id="inputEmail"
          class="w-100 form-control"
          placeholder="Email"
          autofocus
        />
      </div>
      <div class="form-group">
        <label for="inputEmail" class="sr-only">Senha</label>
        <input
          type="password"
          name="password"
          id="inputPassword"
          class="w-100 form-control"
          placeholder="Senha"
        />
      </div>
      <div class="form-group form-check">
        <input type="checkbox" name="rememberMe" id="rememberMe" class="form-check-input">
        <label class="form-check-label" for="rememberMe">Continuar conectado</label>
      </div>
      <div>
        <button class="btn btn-block btn-primary">Login</button>
      </div>
    </form>
  </div>
</div>
